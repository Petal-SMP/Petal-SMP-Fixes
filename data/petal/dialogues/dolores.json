{
  "initializationAction": "(q.npc.is_in_battle_with(q.player) || !q.npc.is_doing_activity('minecraft:idle', 'cobblemon:battling')) ? q.dialogue.close()",
  "speakers": {
    "npc": {
      "name": {
        "type": "expression",
        "expression": "q.npc.name"
      },
      "face": "q.npc.face(false);"
    },
    "player": {
      "face": "q.player.face();",
      "name": {
        "type": "expression",
        "expression": "q.player.username"
      }
    }
  },
  "pages": [
    {
      "id": "dolores-intro",
      "speaker": "npc",
      "lines": [
        {
          "type": "expression",
          "expression": "'Hello, I\\'m ' + q.npc.name + ', would you fancy a pok√©mon battle?'"
        }
      ],
      "input": {
        "type": "option",
        "vertical": false,
        "options": [
          {
            "text": "Battle",
            "value": "battle",
            "action": [
              "q.dialogue.close();",
              "q.npc.start_battle(q.player, 'single');"
            ],
            "isSelectable": "c.npc.can_battle;"
          },
          {
            "text": "No",
            "value": "cancel",
            "action": [
              "q.dialogue.set_page('player_decline')"
            ]
          }
        ]
      }
    },
    {
      "id": "player_decline",
      "speaker": "player",
      "lines": [
        {
          "type": "expression",
          "expression": "'No, I\\'m good'"
        }
      ],
      "input": "q.dialogue.close();"
    }
  ]
}
